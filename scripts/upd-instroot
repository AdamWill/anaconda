usr/lib/locale/ja_JP*/*
etc/motd
etc/issue.net
usr/X11R6/bin/xauth
EOF
fi
      

KEEPFILEGR=/tmp/keepfilegr.$$
cp $KEEPFILE $KEEPFILEGR
cat >> $KEEPFILEGR <<EOF
boot/efi/elilo.efi
boot/efi/efi/boot/bootia64.efi
