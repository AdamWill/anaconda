usr/lib/librpm-*.so*
usr/lib/librpmdb*.so*
usr/lib/librpmio*.so*
usr/lib/libslang*
usr/lib/libz.*
usr/lib/python*
usr/lib/python1.5/site-packages/*kudzu*
usr/lib/python1.5/site-packages/rpmmodule.so
usr/lib/python1.5/site-packages/partedmodule.so
usr/lib/rpm/macros
